@model AddressBook.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/_LayoutNoNavbarDark.cshtml";
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="card card-register mx-auto mt-5">
        <div class="card-header">Register an Account</div>
        <div class="card-body">
            @Html.ValidationSummary("", new { @class = "text-danger" })            
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.FirstName, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "Enter first name" })
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.LastName, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Enter last name" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "control-label" })            
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter email" })
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder="Password" })
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm password" })
                    </div>
                </div>
            </div>
            <input type="submit" class="btn btn-primary btn-block" value="Register" />
            <div class="text-center">
                @Html.ActionLink("Login", "Login", null, new { @class = "d-block small mt-3" })
                @Html.ActionLink("Forgot Password?", "ForgotPassword", null, new { @class = "d-block small" })
            </div>
        </div>
    </div>
}